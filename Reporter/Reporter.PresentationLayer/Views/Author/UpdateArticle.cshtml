@model Reporter.EntityLayer.Entities.Article

@{
    ViewData["Title"] = "UpdateArticle";
    Layout = "~/Views/Shared/_AuthorNewLayout.cshtml";
}


<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Makale Güncelleme Sayfası</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="ArticleId" />

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Makale Adı</label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">İçerik</label>
                            <div class="col-sm-10">
                                <textarea asp-for="Content" class="form-control" rows="5"></textarea>
                                <span asp-validation-for="Content" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Kapak Görseli URL</label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="CoverImageUrl" class="form-control" />
                                <span asp-validation-for="CoverImageUrl" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Ana Görsel URL</label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="MainImageUrl" class="form-control" />
                                <span asp-validation-for="MainImageUrl" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Kategori</label>
                            <div class="col-sm-10">
                                <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "CategoryName"))">
                                    <option value="">Kategori seçiniz</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row justify-content-end">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Makale Güncelle</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>